<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="assessment.mycompany.com.tvguideassessment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="assessment.mycompany.com.tvguideassessment.activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="assessment.mycompany.com.tvguideassessment.activities.ShowNavigationActivity"
            android:label="@string/title_activity_show_navigation"
            android:configChanges="orientation|keyboardHidden|screenSize"></activity>

        <service
            android:name="assessment.mycompany.com.tvguideassessment.system.network.ApiIntentService"
            android:exported="false"></service>
    </application>

</manifest>
